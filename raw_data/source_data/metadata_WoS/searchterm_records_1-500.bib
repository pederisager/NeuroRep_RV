@article{ ISI:000439596400001,
Author = {Lorenzetti, Valentina and Melo, Bruno and Basilio, Rodrigo and Suo, Chao
   and Yucel, Murat and Tierra-Criollo, Carlos J. and Moll, Jorge},
Title = {{Emotion Regulation Using Virtual Environments and Real-Time fMRI
   Neurofeedback}},
