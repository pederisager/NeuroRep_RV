@article{ ISI:000440054700013,
Author = {Donnat, Claire and Holmes, Susan},
Title = {{TRACKING NETWORK DYNAMICS: A SURVEY USING GRAPH DISTANCES}},
Journal = {{ANNALS OF APPLIED STATISTICS}},
Year = {{2018}},
Volume = {{12}},
