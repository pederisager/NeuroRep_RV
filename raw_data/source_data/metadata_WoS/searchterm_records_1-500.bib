@article{ ISI:000438467800027,
Author = {Fiave, Prosper Agbesi and Sharma, Saloni and Jastorff, Jan and Nelissen,
   Koen},
Title = {{Investigating common coding of observed and executed actions in the
   monkey brain using cross-modal multi-variate fMRI classification}},
Journal = {{NEUROIMAGE}},
Year = {{2018}},
Volume = {{178}},
Pages = {{306-317}},
Month = {{SEP}},
Abstract = {{Mirror neurons are generally described as a neural substrate hosting
   shared representations of actions, by simulating or `mirroring' the
   actions of others onto the observer's own motor system. Since single
   neuron recordings are rarely feasible in humans, it has been argued that
   cross-modal multi-variate pattern analysis (MVPA) of non-invasive fMRI
   data is a suitable technique to investigate common coding of observed
   and executed actions, allowing researchers to infer the presence of
   mirror neurons in the human brain. In an effort to close the gap between
   monkey electrophysiology and human fMRI data with respect to the mirror
