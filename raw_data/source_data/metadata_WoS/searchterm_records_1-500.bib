@article{ ISI:000443941200007,
Author = {Geng, Haiyang and Wang, Yi and Gu, Ruolei and Luo, Yue-Jia and Xu,
   Pengfei and Huang, Yuxia and Li, Xuebing},
Title = {{Altered brain activation and connectivity during anticipation of
   uncertain threat in trait anxiety}},
Journal = {{HUMAN BRAIN MAPPING}},
Year = {{2018}},
Volume = {{39}},
