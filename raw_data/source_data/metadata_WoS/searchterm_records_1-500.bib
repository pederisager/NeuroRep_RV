@article{ ISI:000452709200008,
Author = {Fujino, Junya and Kawada, Ryosaku and Tsurumi, Kosuke and Takeuchi,
   Hideaki and Murao, Takuro and Takemura, Ariyoshi and Tei, Shisei and
