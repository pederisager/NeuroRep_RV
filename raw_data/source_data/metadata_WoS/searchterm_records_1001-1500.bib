@article{ ISI:000404547000004,
Author = {Niedtfeld, Inga and Schmitt, Ruth and Winter, Dorina and Bohus, Martin
   and Schmahl, Christian and Herpertz, Sabine C.},
Title = {{Pain-mediated affect regulation is reduced after dialectical behavior
   therapy in borderline personality disorder: a longitudinal fMRI study}},
