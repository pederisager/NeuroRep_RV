@article{ ISI:000396662200015,
Author = {Squeglia, Lindsay M. and Ball, Tali M. and Jacobus, Joanna and Brumback,
   Ty and McKenna, Benjamin S. and Nguyen-Louie, Tam T. and Sorg, Scott F.
   and Paulus, Martin P. and Tapert, Susan F.},
Title = {{Neural Predictors of Initiating Alcohol Use During Adolescence}},
Journal = {{AMERICAN JOURNAL OF PSYCHIATRY}},
