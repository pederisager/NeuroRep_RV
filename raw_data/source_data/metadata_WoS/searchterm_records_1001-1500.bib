@article{ ISI:000391139500021,
Author = {Moisa, Marius and Polania, Rafael and Grueschow, Marcus and Ruff,
   Christian C.},
Title = {{Brain Network Mechanisms Underlying Motor Enhancement by Transcranial
   Entrainment of Gamma Oscillations}},
Journal = {{JOURNAL OF NEUROSCIENCE}},
