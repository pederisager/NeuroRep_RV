@article{ ISI:000405696600003,
Author = {Poerio, Giulia L. and Sormaz, Mladen and Wang, Hao-Ting and Margulies,
   Daniel and Jefferies, Elizabeth and Smallwood, Jonathan},
Title = {{The role of the default mode network in component processes underlying
   the wandering mind}},
