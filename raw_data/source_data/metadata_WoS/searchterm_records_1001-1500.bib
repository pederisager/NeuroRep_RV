Author = {Ziaei, Maryam and Burianova, Hana and von Hippel, William and Ebner,
   Natalie C. and Phillips, Louise H. and Henry, Julie D.},
Title = {{The impact of aging on the neural networks involved in gaze and
   emotional processing}},
