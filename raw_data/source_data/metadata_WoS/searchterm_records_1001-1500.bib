@article{ ISI:000390015900003,
Author = {Yang, Jie and Hofmann, Jessica},
Title = {{Action observation and imitation in autism spectrum disorders: an ALE
   meta-analysis of fMRI studies}},
Journal = {{BRAIN IMAGING AND BEHAVIOR}},
Year = {{2016}},
Volume = {{10}},
Number = {{4}},
Pages = {{960-969}},
Month = {{DEC}},
Abstract = {{Previous studies have shown that the mirror neuron system (MNS) plays an
   important role in action understanding. However, whether and how the MNS
   activity is different in individuals with autism spectrum disorders
   (ASD) and typically developed (TD) individuals are still unclear. The
   current study used activation likelihood estimation to conduct a
   meta-analysis of functional magnetic resonance imaging studies that
   investigated action observation and imitation in ASD and TD individuals.
   Thirteen studies were selected, and the contrasts focused on the brain
   effects in ASD and TD participants and the differences between the two
   groups. The results showed that compared with TD individuals, ASD
   individuals exhibited stronger effects in the anterior inferior parietal
