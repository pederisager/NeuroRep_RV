@article{ ISI:000403856900006,
Author = {Kozuka, Junko and Uno, Akira and Matsuda, Hiroshi and Toyoshima, Yoshiya
   and Hamano, Shin-ichiro},
Title = {{Relationship between the change of language symptoms and the change of
   regional cerebral blood flow in the recovery process of two children
   with acquired aphasia}},
