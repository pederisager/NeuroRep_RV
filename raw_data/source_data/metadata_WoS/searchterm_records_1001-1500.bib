@article{ ISI:000394702700001,
Author = {David, Bastian and Hu, Yang and Kruger, Frank and Weber, Bernd},
Title = {{Other-regarding attention focus modulates third-party altruistic choice:
   An fMRI study}},
Journal = {{SCIENTIFIC REPORTS}},
Year = {{2017}},
Volume = {{7}},
Pages = {{1-12}},
Month = {{FEB 21}},
Abstract = {{Third-party altruistic decision-making has been shown to be modulated by
   other-regarding attention (e.g., focusing on the offender's crime or the
   victim's situation especially in judicial judgment). However, the neural
   mechanisms underlying this modulation remain poorly understood. In this
