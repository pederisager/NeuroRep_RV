@article{ ISI:000397257600012,
Author = {Huang, Zirui and Zhang, Jianfeng and Longtin, Andre and Dumont, Gregory
   and Duncan, Niall W. and Pokorny, Johanna and Qin, Pengmin and Dai, Rui
