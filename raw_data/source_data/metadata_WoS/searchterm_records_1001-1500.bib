@article{ ISI:000397312200006,
Author = {de Macks, Zdena A. Op and Bunge, Silvia A. and Bell, Orly N. and
   Kriegsfeld, Lance J. and Kayser, Andrew S. and Dahl, Ronald E.},
Title = {{The effect of social rank feedback on risk taking and associated reward
