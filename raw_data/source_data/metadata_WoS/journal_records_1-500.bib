Journal = {{BEHAVIORAL NEUROSCIENCE}},
Year = {{2017}},
Volume = {{131}},
Number = {{4}},
Pages = {{304-311}},
Month = {{AUG}},
Abstract = {{The bed nucleus of the stria terminalis (BNST) is a region of the
   extended amygdala that is implicated in addiction, anxiety, and stress
   related behaviors. This region has been identified in mediating the
   aversive state of naloxone-precipitated morphine withdrawal (MWD) and
   cannabinoid Type I (CB1) receptors have been found to modulate
