@article{ ISI:000395479300012,
Author = {Taylor, James O. and Urbano, Catherine M. and Cooper, Brenton G.},
Title = {{Differential Patterns of Constant Frequency 50 and 22 kHz USV Production
   Are Related to Intensity of Negative Affective State}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
