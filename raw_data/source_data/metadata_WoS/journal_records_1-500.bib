@article{ ISI:000402048900005,
Author = {Dwyer, Dominic M. and Gasalla, Patricia and Bura, Stefana and Lopez,
   Matias},
Title = {{Flavors Paired With Internal Pain or With Nausea Elicit Divergent Types
