@article{ ISI:000416436500003,
Author = {Eddy, Meghan C. and Green, John T.},
Title = {{Running Wheel Exercise Reduces Renewal of Extinguished Instrumental
   Behavior and Alters Medial Prefrontal Cortex Neurons in Adolescent, But
