@article{ ISI:000416436500004,
Author = {Zhong, Jimmy Y. and Magnusson, Kathy R. and Swarts, Matthew E. and
   Clendinen, Cherita A. and Reynolds, Nadjalisse C. and Moffat, Scott D.},
Title = {{The Application of a Rodent-Based Morris Water Maze (MWM) Protocol to an
