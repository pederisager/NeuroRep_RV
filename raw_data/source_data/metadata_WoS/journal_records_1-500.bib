@article{ ISI:000404547900012,
Author = {Chrysikou, Evangelia G. and Gorey, Claire and Aupperle, Robin L.},
Title = {{Anodal transcranial direct current stimulation over right dorsolateral
   prefrontal cortex alters decision making during approach-avoidance
   conflict}},
