@article{ ISI:000308770300028,
Author = {Oosterhof, Nikolaas N. and Tipper, Steven P. and Downing, Paul E.},
Title = {{Visuo-motor imagery of specific manual actions: A multi-variate pattern
   analysis fMRI study}},
