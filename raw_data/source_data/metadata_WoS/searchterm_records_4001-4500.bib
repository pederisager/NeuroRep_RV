@article{ ISI:000302202800018,
Author = {Muscatell, Keely A. and Morelli, Sylvia A. and Falk, Emily B. and Way,
   Baldwin M. and Pfeifer, Jennifer H. and Galinsky, Adam D. and Lieberman,
   Matthew D. and Dapretto, Mirella and Eisenberger, Naomi I.},
Title = {{Social status modulates neural activity in the mentalizing network}},
Journal = {{NEUROIMAGE}},
Year = {{2012}},
Volume = {{60}},
Number = {{3}},
Pages = {{1771-1777}},
Month = {{APR 15}},
Abstract = {{The current research explored the neural mechanisms linking social
   status to perceptions of the social world. Two fMRI studies provide
   converging evidence that individuals lower in social status are more
   likely to engage neural circuitry often involved in `mentalizing' or
   thinking about others' thoughts and feelings. Study 1 found that college
