@article{ ISI:000309827300063,
Author = {Sobhani, Mona and Fox, Glenn R. and Kaplan, Jonas and Aziz-Zadeh, Lisa},
Title = {{Interpersonal Liking Modulates Motor-Related Neural Regions}},
