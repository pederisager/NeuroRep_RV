@article{ ISI:000304510800008,
Author = {Prinssen, Eric P. and Nicolas, Laurent B. and Klein, Steffen and
   Grundschober, Christophe and Lopez-Lopez, Cristina and Kessler, Melanie
   S. and Bruns, Andreas and von Kienlin, Markus and Wettstein, Joseph G.
