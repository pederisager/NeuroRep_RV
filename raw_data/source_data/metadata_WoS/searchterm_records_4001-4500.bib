@article{ ISI:000307178500001,
Author = {Lauharatanahirun, Nina and Christopoulos, George I. and King-Casas,
   Brooks},
Title = {{Neural computations underlying social risk sensitivity}},
Journal = {{FRONTIERS IN HUMAN NEUROSCIENCE}},
Year = {{2012}},
Volume = {{6}},
Month = {{AUG 2}},
Abstract = {{Under standard models of expected utility, preferences over stochastic
   events are assumed to be independent of the source of uncertainty. Thus,
   in decision-making, an agent should exhibit consistent preferences,
   regardless of whether the uncertainty derives from the unpredictability
   of a random process or the unpredictability of a social partner.
   However, when a social partner is the source of uncertainty, social
   preferences can influence decisions over and above pure risk attitudes
   (RA). Here, we compared risk related hemodynamic activity and individual
