@article{ ISI:000302202800030,
Author = {Ellis, Robert J. and Norton, Andrea C. and Overy, Katie and Winner,
   Ellen and Alsop, David C. and Schlaug, Gottfried},
Title = {{Differentiating maturational and training influences on fMRI activation
   during music processing}},
