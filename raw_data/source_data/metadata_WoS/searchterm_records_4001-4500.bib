@article{ ISI:000304468400002,
Author = {Schreiber, Darren and Iacoboni, Marco},
Title = {{Huxtables on the Brain: An fMRI Study of Race and Norm Violation}},
Journal = {{POLITICAL PSYCHOLOGY}},
Year = {{2012}},
Volume = {{33}},
Number = {{3, SI}},
Pages = {{313-330}},
Month = {{JUN}},
Abstract = {{While a substantial body of work has been devoted to understanding the
   role of negative stereotypes in racial attitudes, far less is known
   about how we deal with contradictions of those stereotypes. This article
   uses functional brain imaging with contextually rich visual stimuli to
