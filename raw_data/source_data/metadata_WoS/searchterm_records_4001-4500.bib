@article{ ISI:000308770300040,
Author = {Wu, Chiao-Yi and Ho, Moon-Ho Ringo and Chen, Shen-Hsing Annabel},
Title = {{A meta-analysis of fMRI studies on Chinese orthographic, phonological,
   and semantic processing}},
