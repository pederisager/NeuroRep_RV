@article{ ISI:000308770300054,
Author = {Binder, Julia and de Quervain, Dominique J-F and Friese, Malte and
   Luechinger, Roger and Boesiger, Peter and Rasch, Bjoern},
Title = {{Emotion suppression reduces hippocampal activity during successful
   memory encoding}},
Journal = {{NEUROIMAGE}},
