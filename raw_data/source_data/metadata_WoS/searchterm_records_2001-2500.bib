@article{ ISI:000358631700007,
Author = {Fajkus, Jiri and Mikl, Michal and Shaw, Daniel Joel and Brazdil, Milan},
Title = {{An fMRI investigation into the effect of preceding stimuli during visual
   oddball tasks}},
