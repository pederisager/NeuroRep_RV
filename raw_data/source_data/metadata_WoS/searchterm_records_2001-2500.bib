@article{ ISI:000365538600005,
Author = {Gonzalez, Marlen Z. and Beckes, Lane and Chango, Joanna and Allen,
   Joseph P. and Coan, James A.},
Title = {{Adolescent neighborhood quality predicts adult dACC response to social
   exclusion}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
