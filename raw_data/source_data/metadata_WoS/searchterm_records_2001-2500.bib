@article{ ISI:000360596700026,
Author = {Sutterer, Matthew J. and Koscik, Timothy R. and Tranel, Daniel},
Title = {{Sex-related functional asymmetry of the ventromedial prefrontal cortex
   in regard to decision-making under risk and ambiguity}},
Journal = {{NEUROPSYCHOLOGIA}},
