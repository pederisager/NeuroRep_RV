@article{ ISI:000363122000016,
Author = {Molapour, Tanaz and Golkar, Armita and Navarrete, Carlos David and
   Haaker, Jan and Olsson, Andreas},
Title = {{Neural correlates of biased social fear learning and interaction in an
   intergroup context}},
Journal = {{NEUROIMAGE}},
Year = {{2015}},
Volume = {{121}},
Pages = {{171-183}},
Month = {{NOV 1}},
Abstract = {{Associations linking a fearful experience to a member of a social group
   other than one's own (out-group) are more resistant to change than
   corresponding associations to a member of one's own (in-group) (Olsson
   et al., 2005; Kubota et al., 2012), providing a possible link to
   discriminative behavior. Using a fear conditioning paradigm, we
   investigated the neural activity underlying aversive learning biases
   towards in-group (White) and out-group (Black) members, and their
   predictive value for discriminatory interactive behavior towards novel
   virtual-members of the racial out-group (n=20). Our results indicate
   that activity in brain regions previously linked to conditioned fear and
   perception of individuals belonging to the racial out-groups, or
   otherwise stigmatized groups, jointly contribute to the expression of
   race-based biases in learning and behavior. In particular, we found that
   the amygdala and anterior insula (AI) played key roles in
   differentiating between in-group and outgroup faces both when the faces
   were paired with an aversive event (acquisition) and when no more shocks
   were administered (extinction). In addition, functional connectivity
   between the amygdala and the fusiform gyrus increased during perception
   of conditioned out-group faces. Moreover, we showed that brain activity
   in the fear-learning-bias network was related to participants'
   discriminatory interactions with novel out-group members on a later day.
   Our findings are the first to identify the neural mechanism of fear
   learning biases towards out-group members, and its relationship to
   interactive behavior. Our findings provide important clues towards
   understanding the mechanisms underlying biases between social groups.
   (C) 2015 The Authors. Published by Elsevier Inc.}},
