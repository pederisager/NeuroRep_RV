@article{ ISI:000390196400095,
Author = {Dima, Danai and de Jong, Simone and Breen, Gerome and Frangou, Sophia},
Title = {{The polygenic risk for bipolar disorder influences brain regional
   function relating to visual and default state processing of emotional
   information}},
