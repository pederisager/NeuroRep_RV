Author = {Britton, Jennifer C. and Suway, Jenna G. and Clementi, Michelle A. and
   Fox, Nathan A. and Pine, Daniel S. and Bar-Haim, Yair},
Title = {{Neural changes with attention bias modification for anxiety: a
   randomized trial}},
