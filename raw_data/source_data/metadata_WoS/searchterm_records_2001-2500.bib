@article{ ISI:000366463300046,
Author = {Deen, Ben and Koldewyn, Kami and Kanwisher, Nancy and Saxe, Rebecca},
Title = {{Functional Organization of Social Perception and Cognition in the
   Superior Temporal Sulcus}},
Journal = {{CEREBRAL CORTEX}},
Year = {{2015}},
Volume = {{25}},
