@article{ ISI:000388741900007,
Author = {Takahashi, Yuji K. and Schoenbaum, Geoffrey},
Title = {{Ventral Striatal Lesions Disrupt Dopamine Neuron Signaling of
   Differences in Cue Value Caused by Changes in Reward Timing but Not
   Number}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
Year = {{2016}},
Volume = {{130}},
Number = {{6}},
Pages = {{593-599}},
Month = {{DEC}},
Abstract = {{We recently showed that ventral striatal (VS) lesions abolished reward
   prediction errors that reflect changes in reward timing while leaving
   relatively unaffected errors that reflect changes in reward number. Here
   we extended those results by examining whether normal learning-related
   changes in firing to the reward-predictive cues in the same dopamine
   neurons were also disrupted by VS lesions. This analysis revealed that
   dopamine neurons recorded in VS-lesioned rats failed to show
   value-related changes in firing to the cues in timing but showed normal
   changes in number blocks. This effect suggests that the loss of
   reward-evoked error signals in the timing blocks impaired encoding of
   the cue value in downstream areas, which then supply these predictions
   to dopamine neurons at the time of cue presentation.}},
