@article{ ISI:000372529300005,
Author = {Robinson-Drummer, Patrese A. and Dokovna, Lisa B. and Heroux, Nicholas
   A. and Stanton, Mark E.},
Title = {{Cholinergic Mechanisms of the Context Preexposure Facilitation Effect in
   Adolescent Rats}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
Year = {{2016}},
Volume = {{130}},
Number = {{2}},
Pages = {{196-205}},
Month = {{APR}},
Abstract = {{The context preexposure facilitation effect (CPFE) is a variant of
   contextual fear conditioning in which context learning, context-shock
   association, and expression of context conditioning occur in 3 separate
   phases-preexposure, training, and testing. During the preexposure phase,
   the CPFE is disrupted by hippocampal NMDA receptor blockade in juvenile
   rats (Schiffino et al., 2011), and a similar deficit is seen with a
   subcutaneous injection of the muscarinic receptor antagonist,
   scopolamine, in adult mice (Brown, Kennard, Sherer, Comalli, \&
   Woodruff-Pak, 2011). As a foundation for further developmental research,
   the present study examined the role of cholinergic function in the CPFE
   in adolescent rats during each phase of the CPFE protocol. In Experiment
