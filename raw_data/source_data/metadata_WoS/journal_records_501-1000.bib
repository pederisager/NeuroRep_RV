Author = {Hecht, E. E. and Mahovetz, L. M. and Preuss, T. M. and Hopkins, W. D.},
Title = {{A neuroanatomical predictor of mirror self-recognition in chimpanzees}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
