@article{ ISI:000388939700016,
Author = {Rodrigo, Maria Jose and Leon, Inmaculada and Gongora, Daylin and
   Hernandez-Cabrera, Juan A. and Byrne, Sonia and Bobes, Maria A.},
Title = {{Inferior fronto-temporo-occipital connectivity: a missing link between
