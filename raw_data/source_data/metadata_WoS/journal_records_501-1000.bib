@article{ ISI:000383727000002,
Author = {Paschke, Lena M. and Doerfel, Denise and Steimke, Rosa and Trempler, Ima
   and Magrabi, Amadeus and Ludwig, Vera U. and Schubert, Torsten and
   Stelzel, Christine and Walter, Henrik},
Title = {{Individual differences in self-reported self-control predict successful
   emotion regulation}},
