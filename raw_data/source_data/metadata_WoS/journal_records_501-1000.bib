@article{ ISI:000397311400015,
Author = {Sagliano, Laura and D'Olimpio, Francesca and Panico, Francesco and
   Gagliardi, Serena and Trojano, Luigi},
Title = {{The role of the dorsolateral prefrontal cortex in early threat
   processing: a TMS study}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
Year = {{2016}},
Volume = {{11}},
Number = {{12}},
Pages = {{1992-1998}},
Month = {{DEC}},
Abstract = {{Previous studies demonstrated that excitatory (high frequency) offline
   transcranial magnetic stimulation (TMS) over the left and right
   dorsolateral prefrontal cortex (DLPFC) modulates attention allocation on
   threatening stimuli in non-clinical samples. These studies only employed
   offline TMS protocol that did not allow investigating the effect of the
   stimulation on the early stage of threat processing. In this study, the
   role of the right and left dorsolateral prefrontal cortex in early
   threat processing was investigated in high and low anxious individuals
