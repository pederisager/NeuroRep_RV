@article{ ISI:000376912400003,
Author = {Bennion, Kelly A. and Payne, Jessica D. and Kensinger, Elizabeth A.},
Title = {{The Impact of Napping on Memory for Future-Relevant Stimuli:
   Prioritization Among Multiple Salience Cues}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
