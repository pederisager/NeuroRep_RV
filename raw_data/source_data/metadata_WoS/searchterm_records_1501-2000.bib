@article{ ISI:000374227700005,
Author = {Charpentier, Caroline J. and De Martino, Benedetto and Sim, Alena L. and
   Sharot, Tali and Roiser, Jonathan P.},
Title = {{Emotion-induced loss aversion and striatal-amygdala coupling in
   low-anxious individuals}},
