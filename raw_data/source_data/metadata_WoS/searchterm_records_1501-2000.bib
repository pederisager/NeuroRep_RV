@article{ ISI:000378045900010,
Author = {Tylen, Kristian and Philipsen, Johanne Stege and Roepstorff, Andreas and
   Fusaroli, Riccardo},
Title = {{Trails of meaning construction: Symbolic artifacts engage the social
   brain}},
Journal = {{NEUROIMAGE}},
Year = {{2016}},
Volume = {{134}},
Pages = {{105-112}},
Month = {{JUL 1}},
Abstract = {{Symbolic artifacts present a challenge to theories of neurocognitive
   processing due to their hybrid nature: they are at the same time
   physical objects and vehicles of intangible social meanings. While their
   physical properties can be read of their perceptual appearance, the
   meaning of symbolic artifacts depends on the perceiver's interpretative
   attitude and embeddedness in cultural practices. In this study,
   participants built models of LEGO bricks to illustrate their
   understanding of abstract concepts. They were then scanned with fMRI
   while presented to photographs of their own and others' models. When
   participants attended to the meaning of the models in contrast to their
   bare physical properties, we observed activations in mPFC and TPJ, areas
   often associated with social cognition, and IFG, possibly related to
   semantics. When contrasting own and others' models, we also found
