@article{ ISI:000371801200007,
Author = {Colibazzi, Tiziano and Horga, Guillermo and Wang, Zhishun and Huo,
   Yuankai and Corcoran, Cheryl and Klahr, Kristin and Brucato, Gary and
   Girgis, Ragy and Gill, Kelly and Abi-Dargham, Anissa and Peterson,
