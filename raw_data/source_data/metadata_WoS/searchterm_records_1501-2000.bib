Title = {{Neural Dysfunction in Cognitive Control Circuits in Persons at Clinical
   High-Risk for Psychosis}},
Journal = {{NEUROPSYCHOPHARMACOLOGY}},
Year = {{2016}},
Volume = {{41}},
