@article{ ISI:000381229100001,
Author = {Cohn, Moran D. and van Lith, Koen and Kindt, Merel and Pape, Louise E.
   and Doreleijers, Theo A. H. and van den Brink, Wim and Veltman, Dick J.
   and Popma, Arne},
Title = {{Fear extinction, persistent disruptive behavior and psychopathic traits:
   fMRI in late adolescence}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
Year = {{2016}},
Volume = {{11}},
Number = {{7}},
Pages = {{1027-1035}},
Month = {{JUL}},
Abstract = {{Children diagnosed with a Disruptive Behavior Disorder (DBD, i.e.
   Oppositional Defiant Disorder or Conduct Disorder), especially those
   with psychopathic traits, are at risk of developing persistent and
   severe antisocial behavior. Reduced fear conditioning has been proposed
   to underlie persistent antisocial development. However, we have recently
   shown that both DBD persisters and desisters are characterized by
   increased fear conditioning compared with healthy controls (HCs). In
   this study, we investigated whether brain function during fear
   extinction is associated with DBD subgroup-membership and psychopathic
