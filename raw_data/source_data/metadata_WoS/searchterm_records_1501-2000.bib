@article{ ISI:000370243000017,
Author = {Feng, Chunliang and Deshpande, Gopikrishna and Liu, Chao and Gu, Ruolei
   and Luo, Yue-Jia and Krueger, Frank},
Title = {{Diffusion of Responsibility Attenuates Altruistic Punishment: A
   Functional Magnetic Resonance Imaging Effective Connectivity Study}},
Journal = {{HUMAN BRAIN MAPPING}},
