@article{ ISI:000342985600019,
Author = {Andreano, Joseph M. and Dickerson, Bradford C. and Barrett, Lisa Feldman},
Title = {{Sex differences in the persistence of the amygdala response to negative
   material}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
Year = {{2014}},
Volume = {{9}},
Number = {{9}},
Pages = {{1388-1394}},
Month = {{SEP}},
Abstract = {{Previous studies have indicated that men and women have different
   amygdala responses to novel (vs familiar) and valenced (positive vs
   negative) material. It is not known, however, whether these affective
   sex differences are related. In this study, we tested whether women have
   more persistent amygdala responses to familiar, negative material than
   men do. During fMRI, male and female participants viewed evocative
   images that varied in novelty and valence. Women and men showed
   equivalent responses to novel negative material, but women showed a
   sustained amygdala response to familiar negative material relative to
   men, indicating that women's amygdala responses were more persistent
   over multiple repetitions of negative material. Individuals with more
   persistent amygdala responses also reported greater levels of negative
   effect. These findings have implications for sex differences in the
   incidence of affective disorders.}},
