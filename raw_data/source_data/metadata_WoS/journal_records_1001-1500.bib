@article{ ISI:000348380800010,
Author = {Will, Ryan G. and Nutsch, Victoria L. and Turner, Jonathan M. and
   Hattori, Tomoko and Tobiansky, Daniel J. and Dominguez, Juan M.},
Title = {{Astrocytes in the Medial Preoptic Area Modulate Ejaculation Latency in
