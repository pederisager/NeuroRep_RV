@article{ ISI:000350108800006,
Author = {Li, Wenfu and Li, Xueting and Huang, Lijie and Kong, Xiangzhen and Yang,
   Wenjing and Wei, Dongtao and Li, Jingguang and Cheng, Hongsheng and
