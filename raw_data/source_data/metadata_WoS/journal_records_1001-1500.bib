@article{ ISI:000342985600014,
Author = {Everaert, Tom and Spruyt, Adriaan and Rossi, Valentina and Pourtois,
   Gilles and De Houwer, Jan},
Title = {{Feature-specific attention allocation overrules the orienting response
   to emotional stimuli}},
