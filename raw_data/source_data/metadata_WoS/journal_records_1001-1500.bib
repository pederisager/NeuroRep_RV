Author = {Dery, Nicolas and Goldstein, Aaron and Becker, Suzanna},
Title = {{A Role for Adult Hippocampal Neurogenesis at Multiple Time Scales: A
   Study of Recent and Remote Memory in Humans}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
Year = {{2015}},
Volume = {{129}},
