@article{ ISI:000336489000020,
Author = {Weymar, Mathias and Keil, Andreas and Hamm, Alfons O.},
Title = {{Timing the fearful brain: unspecific hypervigilance and spatial
   attention in early visual perception}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
