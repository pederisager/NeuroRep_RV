@article{ ISI:000365538600009,
Author = {Kong, Feng and Ding, Ke and Yang, Zetian and Dang, Xiaobin and Hu,
   Siyuan and Song, Yiying and Liu, Jia},
Title = {{Examining gray matter structures associated with individual differences
   in global life satisfaction in a large sample of young adults}},
