@article{ ISI:000336488700012,
Author = {Yoshimura, Shinpei and Okamoto, Yasumasa and Onoda, Keiichi and
   Matsunaga, Miki and Okada, Go and Kunisato, Yoshihiko and Yoshino, Atsuo
   and Ueda, Kazutaka and Suzuki, Shin-ichi and Yamawaki, Shigeto},
Title = {{Cognitive behavioral therapy for depression changes medial prefrontal
