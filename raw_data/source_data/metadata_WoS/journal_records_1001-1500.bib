@article{ ISI:000365538600003,
Author = {Lee, Kyung Hwa and Siegle, Greg J. and Dahl, Ronald E. and Hooley, Jill
   M. and Silk, Jennifer S.},
Title = {{Neural responses to maternal criticism in healthy youth}},
