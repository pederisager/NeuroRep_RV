Author = {Telzer, Eva H. and Fuligni, Andrew J. and Lieberman, Matthew D. and
   Miernicki, Michelle E. and Galvan, Adriana},
Title = {{The quality of adolescents' peer relationships modulates neural
   sensitivity to risk taking}},
