@article{ ISI:000345846800010,
Author = {Cartmell, Samuel C. D. and Chun, Marvin M. and Vickery, Timothy J.},
Title = {{Neural antecedents of social decision-making in a partner choice task}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
Year = {{2014}},
Volume = {{9}},
Number = {{11}},
Pages = {{1722-1729}},
Month = {{NOV}},
Abstract = {{Experiments in financial decision-making point to two complementary
   processes that encode prospective gain and loss preceding the choice to
   purchase consumer goods. These processes involve the nucleus accumbens
   (NAcc) and the right anterior insula, respectively. The current
   experiment used functional MRI to investigate whether these regions
   served a similar function during an analogous social decision-making
   task without the influence of monetary outcomes. In this task, subjects
   chose partners based on face stimuli of varying attractiveness
   (operationalizing value) and ratings of compatibility with the
   participant (operationalizing likelihood of rejection). The NAcc
   responded to anticipated gain; the right anterior insula responded to
   compatibility, but not in a manner that suggests an analogy to
   anticipated cost. Logistic regression modeling demonstrated that both
   regions predicted subsequent choice above and beyond the influence of
   group attractiveness ratings or compatibility alone. Although the
   function of the insula may differ between tasks, these results suggest
   that financial and social decision-making recruit a similar network of
   brain regions.}},
