@article{ ISI:000342984900010,
Author = {Schulte-Ruether, Martin and Greimel, Ellen and Piefke, Martina and
   Kamp-Becker, Inge and Remschmidt, Helmut and Fink, Gereon R. and
   Herpertz-Dahlmann, Beate and Konrad, Kerstin},
Title = {{Age-dependent changes in the neural substrates of empathy in autism
   spectrum disorder}},
