@article{ ISI:000337076600013,
Author = {Wiggins, Jillian Lee and Swartz, Johnna R. and Martin, Donna M. and
   Lord, Catherine and Monk, Christopher S.},
Title = {{Serotonin transporter genotype impacts amygdala habituation in youth
   with autism spectrum disorders}},
Journal = {{SOCIAL COGNITIVE AND AFFECTIVE NEUROSCIENCE}},
Year = {{2014}},
Volume = {{9}},
Number = {{6}},
Pages = {{832-838}},
Month = {{JUN}},
Abstract = {{Failure of the amygdala to habituate, or decrease response intensity, to
   repeatedly presented faces may be one mechanism by which individuals
   with autism spectrum disorders (ASD) develop and maintain social
   symptoms. However, genetic influences on habituation in ASD have not
   been examined. We hypothesized that serotonin transporter-linked
   promoter region (5-HTTLPR) genotype affects change in amygdala response
   to repeated sad faces differently in individuals with ASD vs healthy
   controls. Forty-four youth with ASD and 65 controls aged 8-19 years were
   genotyped and underwent an event-related functional magnetic resonance
   imaging scan where they identified the gender of emotional faces
