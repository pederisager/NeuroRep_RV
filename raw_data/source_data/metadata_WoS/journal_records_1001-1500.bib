@article{ ISI:000337076600017,
Author = {Kohn, Nils and Falkenberg, Irina and Kellermann, Thilo and Eickhoff,
   Simon B. and Gur, Ruben C. and Habel, Ute},
Title = {{Neural correlates of effective and ineffective mood induction}},
