@article{ ISI:000358681900009,
Author = {Basso, Julia C. and Morrell, Joan I.},
Title = {{The Medial Prefrontal Cortex and Nucleus Accumbens Mediate the
   Motivation for Voluntary Wheel Running in the Rat}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
