@article{ ISI:000325778300002,
Author = {Leknes, Siri and Wessberg, Johan and Ellingsen, Dan-Mikael and
   Chelnokova, Olga and Olausson, Hakan and Laeng, Bruno},
Title = {{Oxytocin enhances pupil dilation and sensitivity to `hidden' emotional
   expressions}},
