@article{ ISI:000314381500004,
Author = {Pena, Catherine Jensen and Champagne, Frances A.},
Title = {{Implications of Temporal Variation in Maternal Care for the Prediction
   of Neurobiological and Behavioral Outcomes in Offspring}},
Journal = {{BEHAVIORAL NEUROSCIENCE}},
