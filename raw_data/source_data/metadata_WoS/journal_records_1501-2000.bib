@article{ ISI:000324614100011,
Author = {Hoenen, Matthias and Schain, Cecile and Pause, Bettina M.},
Title = {{Down-modulation of mu-activity through empathic top-down processes}},
Journal = {{SOCIAL NEUROSCIENCE}},
