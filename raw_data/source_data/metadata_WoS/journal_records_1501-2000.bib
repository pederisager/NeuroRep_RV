@article{ ISI:000311532600001,
Author = {Smith-Bell, Carrie A. and Burhans, Lauren B. and Schreurs, Bernard G.},
Title = {{Predictors of Susceptibility and Resilience in an Animal Model of
   Posttraumatic Stress Disorder}},
