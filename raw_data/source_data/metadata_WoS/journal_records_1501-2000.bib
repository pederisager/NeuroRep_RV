@article{ ISI:000317128600003,
Author = {Laudate, Thomas M. and Neargarder, Sandy and Cronin-Golomb, Alice},
Title = {{Line Bisection in Parkinson's Disease: Investigation of Contributions of
   Visual Field, Retinal Vision, and Scanning Patterns to Visuospatial
   Function}},
