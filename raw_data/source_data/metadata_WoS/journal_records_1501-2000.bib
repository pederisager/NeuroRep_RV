@article{ ISI:000313649700010,
Author = {Westbrook, Cecilia and Creswell, John David and Tabibnia, Golnaz and
   Julson, Erica and Kober, Hedy and Tindle, Hilary A.},
Title = {{Mindful attention reduces neural and self-reported cue-induced craving
   in smokers}},
