@article{ ISI:000308233400012,
Author = {Cox, Christine L. and Uddin, Lucina Q. and Di Martino, Adriana and
   Castellanos, F. Xavier and Milham, Michael P. and Kelly, Clare},
Title = {{The balance between feeling and knowing: affective and cognitive empathy
   are reflected in the brain's intrinsic functional dynamics}},
