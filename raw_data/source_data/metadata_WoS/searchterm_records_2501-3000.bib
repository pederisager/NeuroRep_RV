@article{ ISI:000356781500001,
Author = {Wang, Yi and Liu, Wen-hua and Li, Zhi and Wei, Xin-hua and Jiang,
   Xin-qing and Neumann, David L. and Shum, David H. K. and Cheung, Eric F.
