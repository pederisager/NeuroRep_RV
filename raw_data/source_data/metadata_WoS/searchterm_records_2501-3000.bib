Author = {Cisler, Josh M. and Bush, Keith and Steele, J. Scott and Lenow, Jennifer
   K. and Smitherman, Sonet and Kilts, Clinton D.},
Title = {{Brain and behavioral evidence for altered social learning mechanisms
