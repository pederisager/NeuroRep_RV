@article{ ISI:000349411700027,
Author = {Hung, Chia-Chun and Yen, Cecil C. and Ciuchta, Jennifer L. and Papoti,
   Daniel and Bock, Nicholas A. and Leopold, David A. and Silva, Afonso C.},
Title = {{Functional Mapping of Face-Selective Regions in the Extrastriate Visual
