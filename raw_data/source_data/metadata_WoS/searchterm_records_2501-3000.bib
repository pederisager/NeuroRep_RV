@article{ ISI:000345391700024,
Author = {Nummenmaa, Lauri and Saarimaki, Heini and Glerean, Enrico and
   Gotsopoulos, Athanasios and Jaaskelainen, Iiro P. and Hari, Riitta and
   Sams, Mikko},
Title = {{Emotional speech synchronizes brains across listeners and engages
   large-scale dynamic brain networks}},
