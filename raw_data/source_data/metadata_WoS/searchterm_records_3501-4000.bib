@article{ ISI:000319112600014,
Author = {Lim, Seung-Lark and O'Doherty, John P. and Rangel, Antonio},
Title = {{Stimulus Value Signals in Ventromedial PFC Reflect the Integration of
   Attribute Value Signals Computed in Fusiform Gyrus and Posterior
   Superior Temporal Gyrus}},
Journal = {{JOURNAL OF NEUROSCIENCE}},
Year = {{2013}},
Volume = {{33}},
