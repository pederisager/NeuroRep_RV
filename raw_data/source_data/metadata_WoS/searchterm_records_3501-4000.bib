@article{ ISI:000321067200016,
Author = {Schecklmann, Martin and Lehner, Astrid and Poeppl, Timm B. and Kreuzer,
   Peter M. and Rupprecht, Rainer and Rackl, Julia and Burger, Julia and
   Frank, Elmar and Hajak, Goeran and Langguth, Berthold and Landgrebe,
