@article{ ISI:000315703800003,
Author = {Simonyan, Kristina and Herscovitch, Peter and Horwitz, Barry},
Title = {{Speech-induced striatal dopamine release is left lateralized and coupled
   to functional striatal circuits in healthy humans: A combined PET, fMRI
