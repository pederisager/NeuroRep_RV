@article{ ISI:000320577000009,
Author = {Cacioppo, Stephanie and Frum, Chris and Asp, Erik and Weiss, Robin M.
   and Lewis, James W. and Cacioppo, John T.},
Title = {{A Quantitative Meta-Analysis of Functional Imaging Studies of Social
   Rejection}},
Journal = {{SCIENTIFIC REPORTS}},
Year = {{2013}},
Volume = {{3}},
Month = {{JUN 19}},
Abstract = {{Early neuroimaging studies using Cyberball suggested that social
   rejection activated the pain matrix, as identified in studies of
   physical pain. However, these early studies were characterized by small
   sample sizes. Our statistical multi-level kernel density analysis (MKDA)
   of Cyberball neuroimaging studies with 244 participants fails to support
   the claim that social rejection operates on the same pain matrix as
   nociceptive stimuli, questioning whether social pain is more figurative
   or literal. We also performed an MKDA of the neuroimaging studies of
   reliving a romantic rejection to test whether the pain matrix was
