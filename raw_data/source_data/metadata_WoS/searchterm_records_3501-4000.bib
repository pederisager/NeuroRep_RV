@article{ ISI:000328014700016,
Author = {Gingnell, Malin and Bannbers, Elin and Wikstrom, Johan and Fredrikson,
   Mats and Sundstrom-Poromaa, Inger},
Title = {{Premenstrual dysphoric disorder and prefrontal reactivity during
   anticipation of emotional stimuli}},
Journal = {{EUROPEAN NEUROPSYCHOPHARMACOLOGY}},
Year = {{2013}},
Volume = {{23}},
Number = {{11}},
Pages = {{1474-1483}},
Month = {{NOV}},
Abstract = {{Premenstrual disorder (PMDD) affects around 5\% of women in childbearing
   ages. An increased sensitivity in emotion processing areas of the brain
   to variations in ovarian steroid levels has been suggested as part of
   the pathophysiology in PMDD, but prior neuroimaging studies of emotion
   processing are yet inconclusive. Previous behavioral studies of women
   with PMDD have, however, reported enhanced luteal phase startle
   responsivity during emotional anticipation. Here we used functional
   magnetic resonance imaging (fMRI) to investigate central neural
