@article{ ISI:000425728600023,
Author = {Li, Bingbing and Li, Xu and Pan, Yangu and Qiu, Jiang and Zhang, Dajun},
Title = {{The relationship between self-enhancing humor and precuneus volume in
   young healthy individuals with high and low cognitive empathy}},
Journal = {{SCIENTIFIC REPORTS}},
Year = {{2018}},
Volume = {{8}},
Month = {{FEB 22}},
Abstract = {{A self-enhancing humor style (SEHS) plays an important role in the
   regulation of negative emotion through humorous perspective-taking.
   Following the mind-reading theories of humor, we investigated the
   relationship between gray-matter volume (GMV) of brain areas related to
   theory of mind and SEHS in young college students, using voxel-based
   morphometry analysis. We then performed a voxel-wise analysis of
