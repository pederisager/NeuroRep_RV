@article{ ISI:000404963900024,
Author = {Li, Zhihao and Prudente, Cecilia N. and Stilla, Randall and Sathian, K.
   and Jinnah, H. A. and Hu, Xiaoping},
Title = {{Alterations of resting-state fMRI measurements in individuals with
   cervical dystonia}},
