@article{ ISI:000404963900003,
Author = {Moessnang, Carolin and Otto, Kristina and Bilek, Edda and Schaefer, Axel
   and Baumeister, Sarah and Hohmann, Sarah and Poustka, Luise and
   Brandeis, Daniel and Banaschewski, Tobias and Tost, Heike and
   Meyer-Lindenberg, Andreas},
Title = {{Differential responses of the dorsomedial prefrontal cortex and right
   posterior superior temporal sulcus to spontaneous mentalizing}},
Journal = {{HUMAN BRAIN MAPPING}},
Year = {{2017}},
Volume = {{38}},
Number = {{8}},
Pages = {{3791-3803}},
Month = {{AUG}},
Abstract = {{Previous research suggests a role of the dorsomedial prefrontal cortex
   (dmPFC) in metacognitive representation of social information, while the
   right posterior superior temporal sulcus (pSTS) has been linked to
   social perception. This study targeted these functional roles in the
   context of spontaneous mentalizing. An animated shapes task was
   presented to 46 subjects during functional magnetic resonance imaging.
   Stimuli consisted of video clips depicting animated shapes whose
