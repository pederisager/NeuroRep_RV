@article{ ISI:000412382100019,
Author = {Chen, Zhiyi and Guo, Yiqun and Feng, Tingyong},
Title = {{DELAY DISCOUNTING IS PREDICTED BY SCALE-FREE DYNAMICS OF DEFAULT MODE
