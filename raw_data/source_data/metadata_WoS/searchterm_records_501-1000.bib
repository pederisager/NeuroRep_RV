@article{ ISI:000416835000004,
Author = {White, Stuart F. and Zhao, Hui and Leong, Kelly Kimiko and Smetana,
   Judith G. and Nucci, Larry P. and Blair, R. James R.},
Title = {{Neural correlates of conventional and harm/welfare-based moral
