@article{ ISI:000404963900007,
Author = {Zhan, Jiayu and Jiang, Xiaoming and Politzer-Ahles, Stephen and Zhou,
   Xiaolin},
Title = {{Neural correlates of fine-grained meaning distinctions: An fMRI
   investigation of scalar quantifiers}},
