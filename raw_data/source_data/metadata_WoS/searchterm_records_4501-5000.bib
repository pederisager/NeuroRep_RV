@article{ ISI:000285486000098,
Author = {Schnell, Knut and Bluschke, Sarah and Konradt, Brigitte and Walter,
   Henrik},
Title = {{Functional relations of empathy and mentalizing: An fMRI study on the
   neural basis of cognitive empathy}},
