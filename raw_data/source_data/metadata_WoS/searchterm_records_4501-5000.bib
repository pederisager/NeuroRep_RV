@article{ ISI:000291038600022,
Author = {Sartori, Luisa and Cavallo, Andrea and Bucchioni, Giulia and Castiello,
   Umberto},
Title = {{Corticospinal excitability is specifically modulated by the social
   dimension of observed actions}},
Journal = {{EXPERIMENTAL BRAIN RESEARCH}},
Year = {{2011}},
Volume = {{211}},
Number = {{3-4}},
Pages = {{557-568}},
Month = {{JUN}},
Abstract = {{A large body of research reports that perceiving body movements of other
   people activates motor representations in the observer's brain. This
   automatic resonance mechanism appears to be imitative in nature.
   However, action observation does not inevitably lead to symmetrical
   motor facilitation: mirroring the observed movement might be
   disadvantageous for successfully performing joint actions. In two
