@article{ ISI:000298522600010,
Author = {Schneier, Franklin R. and Pomplun, Marc and Sy, Melissa and Hirsch, Joy},
Title = {{Neural response to eye contact and paroxetine treatment in generalized
   social anxiety disorder}},
