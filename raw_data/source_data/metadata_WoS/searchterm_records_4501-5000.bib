@article{ ISI:000295869500014,
Author = {Van Bavel, Jay J. and Packer, Dominic J. and Cunningham, William A.},
Title = {{Modulation of the Fusiform Face Area following Minimal Exposure to
   Motivationally Relevant Faces: Evidence of In-group Enhancement (Not
   Out-group Disregard)}},
