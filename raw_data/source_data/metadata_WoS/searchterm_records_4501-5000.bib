@article{ ISI:000286513100009,
Author = {Centelles, Laurie and Assaiante, Christine and Nazarian, Bruno and
   Anton, Jean-Luc and Schmitz, Christina},
Title = {{Recruitment of Both the Mirror and the Mentalizing Networks When
