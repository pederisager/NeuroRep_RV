@article{ ISI:000292633600011,
Author = {Shih, Patricia and Keehn, Brandon and Oram, Jessica K. and Leyden, Kelly
   M. and Keown, Christopher L. and Mueller, Ralph-Axel},
Title = {{Functional Differentiation of Posterior Superior Temporal Sulcus in
