@article{ ISI:000294708900003,
Author = {Cikara, Mina and Botvinick, Matthew M. and Fiske, Susan T.},
Title = {{Us Versus Them: Social Identity Shapes Neural Responses to Intergroup
   Competition and Harm}},
Journal = {{PSYCHOLOGICAL SCIENCE}},
Year = {{2011}},
Volume = {{22}},
Number = {{3}},
Pages = {{306-313}},
Month = {{MAR}},
Abstract = {{Intergroup competition makes social identity salient, which in turn
   affects how people respond to competitors' hardships. The failures of an
   in-group member are painful, whereas those of a rival out-group member
   may give pleasure-a feeling that may motivate harming rivals. The
   present study examined whether valuation-related neural responses to
