@article{ ISI:000290473000012,
Author = {Furl, Nicholas and Garrido, Lucia and Dolan, Raymond J. and Driver, Jon
   and Duchaine, Bradley},
Title = {{Fusiform Gyrus Face Selectivity Relates to Individual Differences in
