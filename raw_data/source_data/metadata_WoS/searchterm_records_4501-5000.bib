@article{ ISI:000299434400001,
Author = {Inagaki, Tristen K. and Eisenberger, Naomi I.},
Title = {{Neural Correlates of Giving Support to a Loved One}},
Journal = {{PSYCHOSOMATIC MEDICINE}},
