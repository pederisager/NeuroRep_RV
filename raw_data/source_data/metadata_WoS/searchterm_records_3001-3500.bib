@article{ ISI:000330554000008,
Author = {Shuster, Linda I. and Moore, Donna R. and Chen, Gang and Ruscello,
   Dennis M. and Wonderlin, William F.},
Title = {{Does experience in talking facilitate speech repetition?}},
Journal = {{NEUROIMAGE}},
Year = {{2014}},
Volume = {{87}},
Pages = {{80-88}},
Month = {{FEB 15}},
Abstract = {{Speech is unique among highly skilled human behaviors in its ease of
   acquisition by virtually all individuals who have normal hearing and
   cognitive ability. Vocal imitation is essential for acquiring speech,
   and it is an important element of social communication. The extent to
   which age-related changes in cognitive and motor function affect the
