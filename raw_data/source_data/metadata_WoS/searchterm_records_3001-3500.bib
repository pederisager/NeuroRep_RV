@article{ ISI:000337746800048,
Author = {Lei, Xu and Wang, Yulin and Yuan, Hong and Mantini, Dante},
Title = {{Neuronal Oscillations and Functional Interactions Between Resting State
   Networks: Effects of Alcohol Intoxication}},
