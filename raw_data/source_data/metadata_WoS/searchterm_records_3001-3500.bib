@article{ ISI:000334402700027,
Author = {Thirioux, B. and Mercier, M. R. and Blanke, O. and Berthoz, A.},
Title = {{THE COGNITIVE AND NEURAL TIME COURSE OF EMPATHY AND SYMPATHY: AN
