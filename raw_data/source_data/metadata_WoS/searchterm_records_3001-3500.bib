Title = {{DRD2/ANKK1 Polymorphism Modulates the Effect of Ventral Striatal
   Activation on Working Memory Performance}},
Journal = {{NEUROPSYCHOPHARMACOLOGY}},
Year = {{2014}},
Volume = {{39}},
