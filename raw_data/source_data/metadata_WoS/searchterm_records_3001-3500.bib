@article{ ISI:000327795300018,
Author = {Matsuo, Kayako and Chen, Shen-Hsing Annabel and Liu, Chih-Min and Liu,
   Chen-Chung and Hwang, Tzung-Jeng and Hsieh, Ming H. and Chien, Yi Ling
   and Hwu, Hai-Gwo and Tseng, Wen-Yih Isaac},
Title = {{Stable signatures of schizophrenia in the
   cortical-subcortical-cerebellar network using fMRI of verbal working
   memory}},
