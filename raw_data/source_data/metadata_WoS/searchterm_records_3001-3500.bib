@article{ ISI:000342852100010,
Author = {Sobel, Michael E. and Lindquist, Martin A.},
Title = {{Causal Inference for fMRI Time Series Data With Systematic Errors of
   Measurement in a Balanced On/Off Study of Social Evaluative Threat}},
Journal = {{JOURNAL OF THE AMERICAN STATISTICAL ASSOCIATION}},
Year = {{2014}},
Volume = {{109}},
