@article{ ISI:000349169700014,
Author = {Miller, Ryan M. and Hannikainen, Ivar A. and Cushman, Fiery A.},
Title = {{Bad Actions or Bad Outcomes? Differentiating Affective Contributions to
   the Moral Condemnation of Harm}},
