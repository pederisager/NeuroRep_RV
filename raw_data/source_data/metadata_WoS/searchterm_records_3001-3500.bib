@article{ ISI:000334985700007,
Author = {Feng, Shengchuang and Ye, Xiang and Mao, Lihua and Yue, Xiaodong},
Title = {{The activation of theory of mind network differentiates between
   point-to-self and point-to-other verbal jokes: An fMRI study}},
Journal = {{NEUROSCIENCE LETTERS}},
Year = {{2014}},
Volume = {{564}},
Pages = {{32-36}},
Month = {{APR 3}},
Abstract = {{The mind-reading hypothesis of humor and the inner eye theory of
   laughter both claim that readers' mentalizing about characters in jokes
   is essential for perceiving humor. On the basis of this notion, we
   hypothesized that point-to-other verbal jokes (in which one character
   said funny things about the other character) induced more theory of mind
   (TOM) processing than point-to-self verbal jokes (in which one character
   said funny things about him/herself to the other character). Our
   hypothesis was tested by comparing percent signal changes of these two
   conditions in six core components of the ToM neural network. A
   whole-brain analysis was also conducted. Results from both the region of
   interest (ROI) analysis and the whole-brain analysis show that theory of
   mind network is more activated when subjects read point-to-other jokes
   than when they read point-to-self jokes. Moreover, the whole-brain
   results provide support for the viewpoint that the right hemisphere,
   especially the right frontal lobe, is important in ToM and humor
   processing. (C) 2014 Elsevier Ireland Ltd. All rights reserved.}},
